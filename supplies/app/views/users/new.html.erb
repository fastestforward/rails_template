<%= title 'Sign Up' %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <ul>
    <li>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </li>
    <li>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </li>
    <li>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </li>

    <li class="buttons">
      <%= f.submit "Sign up" %>
    </li>

  </ul>
<% end %>
